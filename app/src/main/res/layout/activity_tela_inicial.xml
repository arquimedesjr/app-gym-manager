<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaInicialActivity">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/mensagemInicial"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="TextView"
        android:layout_marginBottom="15dp"/>

    <Button
    android:id="@+id/btnTelaCadastro01"
    android:layout_width="156dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:text="novo aluno 01"
    android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnTelaCadastro02"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="novo aluno 02"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnTelaCadastro03"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="novo aluno 03"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnLogoutApp"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:text="Logout"
        android:textColor="@color/colorWhite" />
</LinearLayout>
